@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Rollen";
}
<br />
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">Geen rollen gevonden.</td>
            </tr>
        }
        else
        {
            <thead colspan="3">
            <tr class="active">
                <th data-defaultsign="_19"> Bestaande rollen</th>
            </tr>
            </thead>
            foreach (var item in Model)
            {
                <tr>
                    @if ((item.Name == "Admin") || (item.Name == "Customer"))
                    {
                        <td>@item.Name</td>
                        <td>Niet bewerkbaar</td>
                        <td>Niet verwijderbaar</td>
                    }
                    else
                    {
                        <td>@item.Name</td>
                        <td>@Html.ActionLink("Wijzig", "Edit", new {id = item.Id})</td>
                        <td>@Html.ActionLink("Verwijder", "Delete", new {id = item.Id})</td>
                    }
                </tr>
            }
        }
    </table>
</div>
<p> @Html.ActionLink("Maak nieuwe rol", "Create", "Role") </p>