@model Webshop.UI_MVC.Models.ApplicationUser

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Gebruiker</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Achternaam")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayName("Voornaam")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

        <dt>
            @Html.DisplayName("Adres")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            @Html.DisplayName("Postcode")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ZIPCode)
        </dd>

        <dt>
            @Html.DisplayName("Telefoonnummer")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Wijzig", "Edit", new {id = Model.Id}) |
    @if (!User.IsInRole("Admin"))
    {
        @Html.ActionLink("Terug naar lijst", "Index", "Manage")
    }
    @if (User.IsInRole("Admin"))
    {
        @Html.ActionLink("Terug naar lijst", "Index", "User")

    }
</p>