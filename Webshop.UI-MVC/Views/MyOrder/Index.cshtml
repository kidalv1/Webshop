@model IEnumerable<Webshop.UI_MVC.Models.Webshop.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Mijn bestellingen</h2>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="10">Je hebt nog geen bestellingen geplaatst.</td>
            </tr>
        }
        else
        {
            <thead colspan="3">
            <tr class="active">
                <th data-defaultsign="_19">Uitgevoerde bestellingen</th>
            </tr>
            </thead>
            <tr>
                <th>
                    @Html.DisplayName("Factuur Code")
                </th>
                <th>
                    @Html.DisplayName("Betaald?")
                </th>
                <th></th>
            </tr>

            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPaid)
                    </td>
                    <td>

                        @Html.ActionLink("Details", "Details", new {id = item.Id})

                    </td>
                </tr>
            }
        }
    </table>
</div>