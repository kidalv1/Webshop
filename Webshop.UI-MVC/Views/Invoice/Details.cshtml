@model Webshop.UI_MVC.Models.Webshop.Invoice

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Invoice</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Datum")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayName("Betaald?")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsPaid)
        </dd>

        <dt>
            @Html.DisplayName("Factuur Code")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvoiceCode)
        </dd>

        <dt>
            @Html.DisplayName("Email")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayName("Achternaam")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayName("Voornaam")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Firstname)
        </dd>

    </dl>
</div>
<p>
    @if (Model.Deleted != true)
    {
        @Html.ActionLink("Wijzig", "Edit", new {id = Model.Id}) 
    }
    | @Html.ActionLink("Terug naar lijst", "Index")
</p>
