@model IEnumerable<Webshop.UI_MVC.Models.Webshop.InvoiceDetail>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Maak nieuw factuur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Aantal")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pieces)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
